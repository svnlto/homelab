# Environment variables for Arr stack
# Secrets should come from Infisical or Ansible Vault

PUID={{ puid | default(1000) }}
PGID={{ pgid | default(1000) }}
TZ={{ timezone | default('Europe/Berlin') }}

# OpenVPN Configuration
OPENVPN_USER={{ openvpn_user }}
OPENVPN_PASSWORD={{ openvpn_password }}

# Soulseek Configuration
SLSKD_SLSK_USERNAME={{ soulseek_username }}
SLSKD_SLSK_PASSWORD={{ soulseek_password }}

# Arr API Keys (auto-extracted)
{% if radarr_api_key is defined and radarr_api_key != "" %}
RADARR_API_KEY={{ radarr_api_key }}
{% endif %}
{% if sonarr_api_key is defined and sonarr_api_key != "" %}
SONARR_API_KEY={{ sonarr_api_key }}
{% endif %}
{% if lidarr_api_key is defined and lidarr_api_key != "" %}
LIDARR_API_KEY={{ lidarr_api_key }}
{% endif %}
{% if prowlarr_api_key is defined and prowlarr_api_key != "" %}
PROWLARR_API_KEY={{ prowlarr_api_key }}
{% endif %}
{% if bazarr_api_key is defined and bazarr_api_key != "" %}
BAZARR_API_KEY={{ bazarr_api_key }}
{% endif %}
