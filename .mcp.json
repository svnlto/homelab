{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp@latest"
      ]
    },
    "code-reasoning": {
      "command": "npx",
      "args": [
        "-y",
        "@mettamatt/code-reasoning"
      ],
      "env": {}
    },
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "terraform": {
      "command": "/Users/svenlito/.local/bin/terraform-mcp-server",
      "env": {
        "TRANSPORT_MODE": "stdio"
      }
    },
    "kubernetes": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-server-kubernetes"
      ],
      "env": {
        "ALLOW_ONLY_NON_DESTRUCTIVE_TOOLS": "true"
      }
    },
    "argocd": {
      "command": "npx",
      "args": [
        "-y",
        "argocd-mcp@latest",
        "stdio"
      ],
      "env": {
        "ARGOCD_BASE_URL": "https://argocd.homelab.local/api/v1",
        "ARGOCD_API_TOKEN": "${ARGOCD_API_TOKEN}"
      }
    },
    "proxmox": {
      "command": "node",
      "args": [
        "${HOME}/.local/share/mcp-proxmox/index.js"
      ],
      "env": {
        "PROXMOX_HOST": "192.168.0.10",
        "PROXMOX_USER": "terraform@pam",
        "PROXMOX_TOKEN_NAME": "terraform",
        "PROXMOX_TOKEN_VALUE": "${PROXMOX_TOKEN_SECRET}",
        "PROXMOX_ALLOW_ELEVATED": "true"
      }
    },
    "terragrunt-docs": {
      "command": "deno",
      "args": [
        "run",
        "-A",
        "jsr:@excoriate/mcp-terragrunt-docs@0.1.0"
      ]
    },
    "talos": {
      "command": "talos-mcp-server",
      "env": {
        "TALOSCONFIG": "${HOME}/.talos/config"
      }
    }
  }
}
