use flake

dotenv_if_exists

# Terraform/Terragrunt variables for Proxmox
export TF_VAR_proxmox_api_token_id="$PROXMOX_TOKEN_ID"
export TF_VAR_proxmox_api_token_secret="$PROXMOX_TOKEN_SECRET"

# MikroTik RouterOS credentials (loaded from .env)
export MIKROTIK_USERNAME="${MIKROTIK_USERNAME:-}"
export MIKROTIK_PASSWORD="${MIKROTIK_PASSWORD:-}"
export TF_VAR_mikrotik_username="$MIKROTIK_USERNAME"
export TF_VAR_mikrotik_password="$MIKROTIK_PASSWORD"

# Backblaze B2 credentials for Terragrunt remote state (loaded from .env)
# Note: B2 uses S3-compatible API, so we use AWS_* variable names
export AWS_ACCESS_KEY_ID="${B2_KEY_ID:-}"
export AWS_SECRET_ACCESS_KEY="${B2_APPLICATION_KEY:-}"
