# =============================================================================
# Packer Variables - Example Configuration
# Copy this to variables.auto.pkrvars.hcl and customize
# =============================================================================

# ISO Configuration
# iso_url      = "https://cdimage.debian.org/debian-cd/current/amd64/iso-cd/debian-13.2.0-amd64-netinst.iso"
# iso_checksum = "sha256:677c4d57aa034dc192b5191870141057574c1b05df2b9569c0ee08aa4e32125d"

# VM Hardware
disk_size = "32G"
memory    = 4096
cpus      = 4

# Network
hostname = "pve-node"
domain   = "local"

# Authentication (CHANGE THESE!)
ssh_username = "root"
ssh_password = "packer"

# Build Configuration
output_format = "raw"     # "raw" for bare-metal, "qcow2" for VM testing
headless      = true      # Set to false to watch via VNC

# Proxmox Configuration
pve_version                  = "8"
pve_repository               = "no-subscription"
remove_subscription_warning  = true

# UEFI Configuration
efi_boot = true
# efi_firmware_code = "/usr/share/OVMF/OVMF_CODE.fd"
# efi_firmware_vars = "/usr/share/OVMF/OVMF_VARS.fd"

# Optional Features
install_cloud_init         = false
install_zfs                = false
configure_pcie_passthrough = false

